{
  "manifest_version": 3,
  "name": "Smash Karts Match Tracker",
  "version": "1.0.0",
  "description": "Track and analyze your Smash Karts gameplay statistics",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.smashkarts.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.smashkarts.io/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.smashkarts.io/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 